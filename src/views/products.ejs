<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products</title>
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
        }

        h2 {
            text-align: center;
            margin-top: 40px;
            color: #333;
        }

        table {
            width: 90%;
            margin: 20px auto;
            border-collapse: collapse;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        th, td {
            padding: 15px;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
            font-weight: bold;
            text-align: left;
        }

        td:last-child {
            white-space: nowrap;
        }

        .actions {
            text-align: center;
        }

        .actions a, .actions button {
            display: inline-block;
            padding: 8px 16px;
            text-decoration: none;
            color: #fff;
            background-color: #007bff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-right: 8px;
        }

        .actions a:hover, .actions button:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <h2>Products</h2>
    <div style="text-align: center;">
        <a href="/create_product" style="margin-bottom: 20px; display: inline-block; padding: 10px 20px; background-color: #007bff; color: #fff; border-radius: 4px; text-decoration: none;">Thêm Săn Phẩm</a>
    </div>
    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Price</th>
                <th>Discount</th>
                <th>Description</th>
                <th>Category_id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach(function(product) { %>
                <tr>
                    <td><%= product.id %></td>
                    <td><%= product.title %></td>
                    <td><%= product.price %></td>
                    <td><%= product.discount %></td>
                    <td><%= product.description %></td>
                    <td><%=JSON.stringify(categoryNames[product.category_id])  %></td>
                    
                    <td class="actions">
                        <!-- Nút để chuyển đến trang chỉnh sửa -->
                        <a href="/edit/<%= product.id %>">Chỉnh Sửa</a>
                        <!-- Nút để xóa người dùng -->
                        <form action="/api/products/delete/<%= product.id %>" method="POST" style="display: inline;">
                            <button type="submit">Xóa</button>
                        </form>
                        
                        <!-- <form action="/api/gio-hang/add/<%= product.id %>" method="POST" style="display: inline;">
                            <button type="submit">Add Cart</button>
                        </form> -->
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
